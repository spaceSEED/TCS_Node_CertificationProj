<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<%-include ./header.ejs%>
<br><br><br>
  <form method="POST" style="padding: 25px;" class=" bg-light col-md-6 offset-md-3 shadow-lg rounded" action="http://localhost:3000/sports" enctype="multipart/form-data">
    <h4 style="font-size: 35px;" class="text-center display-4">Add a Sports Article</h4>
    <hr><br>

    <div class="mb-3">
      <label for="title1" class="form-label">Title</label>
      <input type="text" class="form-control" id="title1" name="title">
    </div>
    <div class="mb-3">
      <label for="title2" class="form-label">Description</label>
      <input type="text" class="form-control" id="title2" name="description">
    </div>
    <div class="mb-3">
      <label for="title3" class="form-label">URL</label>
      <input type="text" class="form-control" id="title3" name="url">
    </div>
    <div class="mb-3">
      <label for="img_path" class="form-label">Image URL</label>
      <input id="img_path" type="text" class="form-control" name="img_url">
      <input id="image-file" type="file" name="photo" onchange="saveImg(this)" single>
    </div>
    <div class="mb-3">
      <label for="title5" class="form-label">Publication Date</label>
      <input type="date" class="form-control" id="title5" name="pub_date">
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">Submit</button>
      <button type="reset" class="btn btn-warning">Reset</button>
    </div>
 
  </form>


  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script>
      async function saveImg(input){
          let photo =input.files[0];
          //console.log(input.files);
          let type=photo.name.substring(photo.name.lastIndexOf('.')).toLowerCase();
          if(type=='.jpg'||type=='.png'||type=='.jpeg'){
            document.getElementById("img_path").value=photo.name;
          }else{
            console.log("Wrong filetype");
            document.getElementById("image-file").value="";
          }
      }
  </script>

  <%-include ./footer.ejs%>

