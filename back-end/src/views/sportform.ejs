<%-include ./header.ejs%>

  <h1>Add Sport Article</h1>
  <form method="POST" action="http://localhost:3000/sports">
    <div class="mb-3">
      <label for="title1" class="form-label">Title</label>
      <input type="text" class="form-control" id="title1" name="title">
    </div>
    <div class="mb-3">
      <label for="title2" class="form-label">Description</label>
      <input type="text" class="form-control" id="title2" name="description">
    </div>
    <div class="mb-3">
      <label for="title3" class="form-label">URL</label>
      <input type="text" class="form-control" id="title3" name="url">
    </div>
    <div class="mb-3">
      <label for="title4" class="form-label">Image URL</label>
      <input type="text" class="form-control" id="title4" name="img_url">
    </div>
    <div class="mb-3">
      <label for="title5" class="form-label">Publication Date</label>
      <input type="date" class="form-control" id="title5" name="pub_date">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="reset" class="btn btn-warning">Reset</button>
  </form>


  <%-include ./footer.ejs%>