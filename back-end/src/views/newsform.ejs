<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<%-include ./header.ejs%>

  <%if(newsItem){%>
    <h1>Edit News</h1>
    <form method="POST" action="http://localhost:3000/news">
      <input type="hidden" name="isSports" value="<%=newsItem.isSports%>">
      <input type="hidden" name="_id" value="<%=newsItem._id%>">
      <input type="hidden" name="_method" value="PUT">
      <div class="mb-3">
        <label for="title1" class="form-label">Title</label>
        <input type="text" class="form-control" id="title1" name="title" value="<%=newsItem.title%>">
      </div>
      <div class="mb-3">
        <label for="title2" class="form-label">Description</label>
        <input type="text" class="form-control" id="title2" name="description" value="<%=newsItem.description%>">
      </div>
      <div class="mb-3">
        <label for="title3" class="form-label">URL</label>
        <input type="text" class="form-control" id="title3" name="url" value="<%=newsItem.url%>">
      </div>
      <div class="mb-3">
        <label for="title4" class="form-label">Image URL</label>
        <input type="text" class="form-control" id="title4" name="img_url" value="<%=newsItem.img_url%>">
      </div>
      <div class="mb-3">
        <label for="title5" class="form-label">Publication Date</label>
        <input type="date" class="form-control" id="title5" name="pub_date" value="<%=newsItem.pub_date%>">
      </div>
      <button type="submit" class="btn btn-primary">Save Changes</button>
      <button type="reset" class="btn btn-warning">Reset</button>
    </form>
    <%}else{%>
      <h1>Add News</h1>
      <form method="POST" action="http://localhost:3000/news">
        <input type="hidden" name="_method" value="POST">
        <div class="mb-3">
          <label for="title1" class="form-label">Title</label>
          <input type="text" class="form-control" id="title1" name="title">
        </div>
        <div class="mb-3">
          <label for="title2" class="form-label">Description</label>
          <input type="text" class="form-control" id="title2" name="description">
        </div>
        <div class="mb-3">
          <label for="title3" class="form-label">URL</label>
          <input type="text" class="form-control" id="title3" name="url">
        </div>
        <div class="mb-3">
          <label for="title4" class="form-label">Image URL</label>
          <input type="text" class="form-control" id="title4" name="img_url">
        </div>
        <div class="mb-3">
          <label for="title5" class="form-label">Publication Date</label>
          <input type="date" class="form-control" id="title5" name="pub_date">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-warning">Reset</button>
      </form>
      <%}%>


        <%-include ./footer.ejs%>