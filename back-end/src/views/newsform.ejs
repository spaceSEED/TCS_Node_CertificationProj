<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<%-include ./header.ejs%>
<br><br><br>
  <%if(newsItem){%>
    <form style="padding: 25px;" class=" bg-light col-md-6 offset-md-3 shadow-lg rounded" method="POST"
      action="http://localhost:3000/news">
      <h4 style="font-size: 35px;" class="text-center display-4">Edit News</h4>
      <hr><br>
      <input type="hidden" name="isSports" value="<%=newsItem.isSports%>">
      <input type="hidden" name="_id" value="<%=newsItem._id%>">
      <input type="hidden" name="_method" value="PUT">
      <div class="mb-3">
        <label for="title1" class="form-label">Title</label>
        <input type="text" class="form-control" id="title1" name="title" placeholder="Enter a title" value="<%=newsItem.title%>">
      </div>
      <div class="mb-3">
        <label for="title2" class="form-label">Description</label>
        <input type="text" class="form-control" id="title2" name="description" placeholder="Enter a description" value="<%=newsItem.description%>">
      </div>
      <div class="mb-3">
        <label for="title3" class="form-label">URL</label>
        <input type="text" class="form-control" id="title3" name="url" placeholder="Enter URL" value="<%=newsItem.url%>">
      </div>
      <div class="mb-3">
        <label for="title4" class="form-label">Image URL</label>
        <input type="text" class="form-control" id="title4" placeholder="Enter image URL"  name="img_url" value="<%=newsItem.img_url%>">
      </div>
      <div class="mb-3">
        <label for="title5" class="form-label">Publication Date</label>
        <input type="date" class="form-control" id="title5" name="pub_date" value="<%=newsItem.pub_date%>">
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <button type="reset" class="btn btn-warning">Reset</button>
      </div>
      
    </form>
    <%}else{%>
      <form style="padding: 25px;" class=" bg-light col-md-6 offset-md-3 shadow-lg rounded" method="POST"
        action="http://localhost:3000/news">
        <h4 style="font-size: 35px;" class="text-center display-4">Add a News Article</h4>
        <hr><br>
        <input type="hidden" name="_method" value="POST">
        <div class="mb-3">
          <label for="title1" class="form-label">Title</label>
          <input type="text" class="form-control" id="title1" placeholder="Enter a title" name="title">
        </div>
        <div class="mb-3">
          <label for="title2" class="form-label">Description</label>
          <input type="text" class="form-control" id="title2" placeholder="Enter a description" name="description">
        </div>
        <div class="mb-3">
          <label for="title3" class="form-label">URL</label>
          <input type="text" class="form-control" placeholder="Enter a URL" id="title3" name="url">
        </div>
        <div class="mb-3">
          <label for="title4" class="form-label">Image URL</label>
          <input type="text" class="form-control" id="title4" placeholder="Enter image URL" name="img_url">
        </div>
        <div class="mb-3">
          <label for="title5" class="form-label">Publication Date</label>
          <input type="date" class="form-control" id="title5" name="pub_date">
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-warning">Reset</button>
        </div>
        
      </form>
      <%}%>


