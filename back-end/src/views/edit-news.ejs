<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit News</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <!-- import jquery -->
    <link href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet">

</head>
<%-include ./header.ejs%>

    <section style="margin: 25px;">

        <br>
        <h1 class="text-center display-4">Edit News</h1>
        <hr>
        <br>
    <div style="background-color: #f39c12;" class="shadow-lg border">
        <table id="example" class="display table table-striped table-bordered table-hover " style="color: white;padding-top: 20px; padding-bottom: 20px; width:95%">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Published At</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>

            <tbody class='table-light'>
                <% data.forEach(function(newsItem) { %>

                    <tr>
                        <td >
                            <%= newsItem.title %>
                        </td>
                        <td >
                            <%= newsItem.description %>
                        </td>
                        <td>
                            <%= newsItem.pub_date %>
                        </td>
                        <td>
                            <form method="POST" action="http://localhost:3000/edit">
                                <input type="hidden" name="title" value="<%=newsItem.title%>">
                                <input type="hidden" name="description" value="<%=newsItem.description%>">
                                <input type="hidden" name="pub_date" value="<%=newsItem.pub_date%>">
                                <input type="hidden" name="_id" value="<%=newsItem._id%>">
                                <input type="hidden" name="url" value="<%=newsItem.url%>">
                                <input type="hidden" name="img_url" value="<%=newsItem.img_url%>">
                                <input type="hidden" name="isSports" value="<%=newsItem.isSports%>">
                                <input type="submit" class="btn btn-warning" value="Edit">
                            </form>
                            <a href="/news/delete/<%=newsItem._id%>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>

            <tfoot class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Published At</th>
                    <th>Edit/Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    </section>
    <!-- jquery script to use datatable-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>


    <%-include ./footer.ejs%>

    <style>
        body,
          html {
              margin: 0;
              padding: 0;
              height: 100%;
              background: #60a3bc !important;
          }
          </style>
</html>